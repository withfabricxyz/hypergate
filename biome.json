{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
  "files": {
    "maxSize": 2097152,
    "ignore": [
      "wagmi.config.ts",
      "*.test.ts",
      "test/**",
      "build/**"
    ]
  },
	"organizeImports": {
		"enabled": true
	},
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
	"linter": {
		"enabled": true,

		"rules": {
			"recommended": true,
      "correctness": {
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn"
      }
		}
	}
}
